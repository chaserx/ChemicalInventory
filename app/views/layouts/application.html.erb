<!DOCTYPE html>
<html>
<head>
  <title><%= h(yield(:title) || "Chemical Inventory") %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="chemicals">
  
<div id="container">
  <% if flash[:notice] %>
        <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
        <p class="error"><%= flash[:error] %></p>
  <% end %>
  
  <%= yield %>
</div>

</body>
</html>
